@{
    ViewBag.Title = "Accueil";
    ViewBag.MenuSelected = ViewBag.Title.ToUpper();
    ViewBag.BreadCrumb = "";
    ViewBag.SubTitle = String.Format("Bienvenue {0}", ViewBag.UserFirstName);
    ViewBag.Message = "Voici votre tableau de bord. Utilisez le menu de gauche pour continuer.";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content text-center p-md">
                    <h1>@ViewBag.SubTitle</h1>
                    <p>@ViewBag.Message</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- WIDGET DATE -->
        <div class="col-lg-3">
            <div class="widget style1 navy-bg">
                <div class="row">
                    <div class="col-xs-4">
                        <i class="fas fa-calendar-alt fa-5x"></i>
                    </div>
                    <div class="col-xs-8 text-right">
                        <span>Aujourd'hui</span>
                        <h3 class="font-bold">@DateTime.Now.ToString("dddd, dd MMMM yyyy")</h3>
                    </div>
                </div>
            </div>
        </div>
        <!-- WIDGET BIRTHDAY -->
        <div class="col-lg-3">
            <div class="widget style1 blue-bg">
                <div class="row">
                    <div class="col-xs-4">
                        <i class="fas fa-birthday-cake fa-5x"></i>
                    </div>
                    <div class="col-xs-8 text-right">
                        <span>Anniversaires</span>
                        <h3 class="font-bold">@Html.Raw(ViewBag.Birthdays)</h3>
                    </div>
                </div>
            </div>
        </div>
        <!-- WIDGET FOLDERS -->
        <div class="col-lg-3">
            <div class="widget style1 lazur-bg pointer">
                <div class="row">
                    <a href="@Url.Action("Index", "Agenda")" style="color: inherit;">
                        <div class="col-xs-4">
                            <i class="fas fa-folder-open fa-5x"></i>
                        </div>
                        <div class="col-xs-8 text-right">
                            <span>Dossiers ouverts</span>
                            <h2 class="font-bold">@ViewBag.UnclosedFoldersCount</h2>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <!-- WIDGET TASKS -->
        <div class="col-lg-3">
            <div class="widget style1 yellow-bg">
                <div class="row">
                    <a href="@Url.Action("Index", "Agenda")" style="color: inherit;">
                        <div class="col-xs-4">
                            <i class="fas fa-tasks fa-5x"></i>
                        </div>
                        <div class="col-xs-8 text-right">
                            <span>Tâches non planifiées</span>
                            <h2 class="font-bold">@ViewBag.UnsignedTasksCount</h2>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

